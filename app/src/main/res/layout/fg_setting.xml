<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



<com.example.mynote.edu.swu.CircleImageView
        android:id="@+id/img_box"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="5dp"

    android:layout_marginTop="20dp"

    android:scaleType="centerCrop"

      tools:src="@mipmap/tab_better_pressed"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline11"
        app:layout_constraintEnd_toEndOf="@id/guideline9"
         />
    <ImageView
        android:id="@+id/btn_take_photo"

        android:layout_margin="5dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintStart_toEndOf="@id/guideline9"
        app:layout_constraintBottom_toBottomOf="@id/guideline11"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/btn_camera"

        android:layout_margin="5dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintStart_toEndOf="@id/btn_take_photo"
        app:layout_constraintBottom_toBottomOf="@id/guideline11"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         app:layout_constraintTop_toBottomOf="@id/item1"
         android:layout_marginTop="10dp"
         android:layout_height="100dp" >

         <WebView
             android:id="@+id/item2"
             android:layout_marginTop="10dp"


             android:layout_width="match_parent"
             android:layout_height="100dp"/>

     </LinearLayout>-->


    <TextView
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:background="@color/text_gray"
        android:paddingStart="145dp"
        android:paddingTop="35dp"
        android:text="退出"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="250dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="160dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>